//3 - Faça uma função que armazena uma medida inteira qualquer em um vetor fornecido.

#include <stdio.h>
#include <stdlib.h>

//função contendo o elemento, o valor máximo, a última posição e o vetor vazio que receberá os valores
int insertVector(int element, int max, int lastPos, int Vector[]){
  //incrementa
  Vector[lastPos + 1] = element;
  //condição se o valor ultrapassar o valor máximo
  if(lastPos +1 >= max){
    //retorna erro e a última posição
    printf("Erro: valor máximo: %d, última posição: %d, valores:", max, lastPos + 1);
  }
  return 0;
}

//função que retorna os valores e a última posição
int main(){
  int maxValue = 10;
  int lastPos = -1;
  int numbers[maxValue];
  
  insertVector(9, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(8, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(7, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(6, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(5, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(4, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(3, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(2, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(1, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(0, maxValue, lastPos, numbers);
  lastPos = lastPos + 1;
  
  insertVector(100, maxValue, lastPos, numbers);

  //retorna 0
  printf("\n %d", numbers[0]);
  //retorna 1
  printf("\n %d", numbers[1]);
  //retorna 2
  printf("\n %d", numbers[2]);
  //retorna 3
  printf("\n %d", numbers[3]);
  //retorna 4
  printf("\n %d", numbers[4]);
  //retorna 5
  printf("\n %d", numbers[5]);
  //retorna 6
  printf("\n %d", numbers[6]);
  //retorna 7
  printf("\n %d", numbers[7]);
  //retorna 8
  printf("\n %d", numbers[8]);
  //retorna 8
  printf("\n %d", numbers[9]);
}
